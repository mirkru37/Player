<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dark_3"
    android:orientation="vertical"
    android:clickable="true"
    android:paddingTop="@dimen/musicItemMargin"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/listCreator_imgSize"
            android:layout_height="@dimen/listCreator_imgSize"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/listImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_choose_front"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/musicItemMargin"
                    android:layout_marginTop="@dimen/musicItemMargin"
                    app:cardCornerRadius="@dimen/play_button_corner_radius">
                    <EditText
                        android:background="@color/backgroundColorLight"
                        android:id="@+id/new_listText"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:maxLines="1"
                        android:textSize="@dimen/textSmallSize"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold"
                        android:layout_height="@dimen/plCreatorButtonHeight"
                        android:hint="Name"
                        android:textAlignment="center"/>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
            <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/play_button_corner_radius"
                android:layout_margin="@dimen/musicItemMargin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/musicItemHeight">
                <Button
                    android:id="@+id/_done_action"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_bg"
                    android:textAlignment="center"
                    android:text="Done"
                    android:textSize="@dimen/textSmallSize"
                    android:textColor="@color/colorTextPrimary"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto_bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/play_button_corner_radius"
                android:layout_margin="@dimen/musicItemMargin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/musicItemHeight">
                <Button
                    android:id="@+id/_cancel_action"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_bg"
                    android:textAlignment="center"
                    android:text="Cancel"
                    android:textSize="@dimen/textSmallSize"
                    android:textColor="@color/colorTextPrimary"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto_bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

<android.support.v7.widget.RecyclerView
    android:layout_marginTop="@dimen/musicItemMargin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/newList_songs"
    android:layout_weight="1"
    android:layout_marginBottom="@dimen/newListMargin"
    ></android.support.v7.widget.RecyclerView>



</LinearLayout>