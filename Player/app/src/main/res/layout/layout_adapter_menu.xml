<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/menuItemMargLeft"
    android:layout_marginRight="@dimen/menuItemMargRight"
    android:id="@+id/click_zone">
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/menuItemSize"
        android:layout_height="@dimen/menuItemSize"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/menu_item_corner_radius">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/menu_item_image"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/menu_item_text"
        android:text="Download"
        android:textAlignment="center"
        android:maxLines="1"
        android:textSize="@dimen/textItemSmallSize"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/colorTextPrimary"
        android:layout_height="wrap_content" />
</LinearLayout>