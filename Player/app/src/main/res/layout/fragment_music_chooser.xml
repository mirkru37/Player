<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MusicChooserFragment"
    android:orientation="vertical"
    android:background="@drawable/plbackground_dark_2"
    android:paddingTop="@dimen/musicItemMargin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="@dimen/play_button_corner_radius"
            android:layout_margin="@dimen/musicItemMargin"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/musicItemHeight">
            <Button
                android:id="@+id/_cancel_action"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_bg"
                android:textAlignment="center"
                android:text="Cancel"
                android:textSize="@dimen/textSmallSize"
                android:textColor="@color/colorTextPrimary"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="@dimen/play_button_corner_radius"
            android:layout_margin="@dimen/musicItemMargin"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/musicItemHeight">
            <Button
                android:id="@+id/_done_action"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_bg"
                android:textAlignment="center"
                android:text="Done"
                android:textSize="@dimen/textSmallSize"
                android:textColor="@color/colorTextPrimary"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

